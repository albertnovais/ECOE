@model IEnumerable<ECOE.Models.Pessoa>

@{
    ViewBag.Title = "ListaPessoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Mensagem = ViewBag.Mensagem;
}

@if (Mensagem != null)
{
    <div class="alert alert-success col-md-8 " style="margin-top:1%; margin:auto; margin-bottom:1%;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <i class="material-icons">close</i>
        </button>

        @if (Mensagem == "1")
        {
            <span style="font-size: 20px; text-align:center;">Cadastro efetuado com sucesso!</span>
        }

    </div>
}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm("RemovePessoa", "Pessoa", FormMethod.Post))
        {
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Remover</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    Realmente deseja remover

                    <input type="hidden" id="did" name="id" value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Remover" class="btn btn-danger">
                </div>
            </div>
        }
    </div>
</div>



<div class="col-md-offset-2 col-md-12" style="margin-top:2%; text-align:right;">
    <a href="CreatePessoa" class=" btn btn-primary">
        Novo Usuário
    </a>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">person</i>
                        </div>
                        <h4 class="card-title" style="font-weight:bold;">Usuários</h4>
                    </div>


                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Nome</th>
                                        <th>Email</th>
                                        <th>RA</th>
                                        <th>Acesso</th>
                                        <th>Cadastrou</th>
                                        <th>Status</th>
                                        <th class="disabled-sorting text-center">Ações</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                            <td>@Html.DisplayFor(modelItem => item.RA)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Acesso.Nome)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Pessoa2.Nome)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Status.Nome)</td>
                                            <td class="text-right">
                                                <a href="@Url.Action("EditPessoa", new { pessoaId = item.PessoaId })" title="Editar" class="btn btn-link btn-warning btn-just-icon edit"><i class="material-icons">create</i></a>
                                                <button title="Remover" data-toggle="modal" data-target="#exampleModal" class="btn btn-link btn-danger btn-just-icon remove" id="remo" onclick="myFunction('@item.PessoaId')"><i class="material-icons">close</i></button>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Script de Remover *@

<script>

    function myFunction(id) {
        $("#did").val(id);

    }

</script>   