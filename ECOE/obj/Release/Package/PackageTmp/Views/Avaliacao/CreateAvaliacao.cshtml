@model ECOE.Models.Avaliacoes

@{
    ViewBag.Title = "CreateAvaliacao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-horizontal" style="margin-top:3%;">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary card-header-icon">
                <div class="card-icon">
                    <i class="material-icons">library_books</i>
                </div>
                <h4 class="card-title" style="font-weight:bold;">
                    Adicionar Avaliação
                </h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group has-rose bmd-form-group">
                                <label class="bmd-label-floating">Título da Avaliação</label>
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group bmd-form-group has-rose">
                                <label class="bmd-label-floating">Peso</label>
                                @Html.EditorFor(model => model.Peso, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating"></label>
                                @Html.DropDownList("TurmaId", ViewBag.turma as IEnumerable<SelectListItem>, "Turma", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TurmaId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group has-rose bmd-form-group">
                            <textarea id="mytextarea" rows="25" name="Descricao"></textarea>
                            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="card-footer ml-auto mr-auto">
                        <div>
                            <div class="col-md-offset-2 col-md-2">
                                <a href="ListAvaliacao">
                                    <input type="button" value="Cancelar" class="btn btn-danger" style="font-weight:bold; font-family:Arial;" />
                                </a>
                            </div>
                        </div>
                        <div>
                            <input type="submit" value="Salvar" class="btn btn-primary pull-right">
                        </div>
                    </div>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>
    </div>
