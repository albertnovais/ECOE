@model ECOE.Models.Avaliacoes

@{
    ViewBag.Title = "EditAvaliacao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-horizontal" style="margin-top:3%;">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PessoaId)
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" style="font-weight:bold;">
                    Editar @Model.Nome
                </h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group has-rose bmd-form-group">
                                <label class="bmd-label-floating">Nome da Turma </label>
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group has-rose bmd-form-group">
                                <label class="bmd-label-floating">Peso </label>
                                @Html.EditorFor(model => model.Peso, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group has-rose bmd-form-group">
                            <textarea id="mytextarea" rows="25" name="Descricao"> @Html.Raw(Model.Descricao)</textarea>
                            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    @*Botões*@
                    <div class="card-footer" style="text-align:right">
                        <row>
                            <a href="ListAvaliacao" class="btn btn-danger" style="font-weight:bold; font-family:Arial;">Cancelar</a>
                            <input type="submit" value="Salvar" class="btn btn-primary pull-right">
                        </row>
                    </div>
                }
            </div>
        </div>
    </div>
</div>




