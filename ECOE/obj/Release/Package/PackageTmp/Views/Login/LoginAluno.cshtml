@model ECOE.Models.Pessoa

@{
    /**/

    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
    var Mensagem = ViewBag.Mensagem;
}

        <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
        <div class="container ">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()



                        <div class="card card-login card-hidden">
                            <div class="card-header card-header-primary text-center fundoazul">
                                <h4 class="card-title" style="font-weight: bold">ECOE</h4>
                            </div>
                            <div class="card-body ">

                                <div class="input-group has-rose">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">email</i>
                                        </span>
                                    </div>
                                   <input class="form-control" type="text" name="email" placeholder="E-mail"/>
                                </div>

                                <div class="input-group has-rose">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">person</i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" name="RA" placeholder="RA" />
                                </div>

                            </div>
                            <div class="card-footer justify-content-center">
                                <input type="submit" value="Entrar" class="btn btn-outline-primary btn-link btn-lg">
                            </div>
                        </div>
                    }
                    </div>
            </div>
        </div>
   
    @if (Mensagem ==2 )
    {

        <div class="alert alert-danger col-md-6" style=" margin:auto ;">
            <p style="font-size: 20px; text-align:center; margin-bottom:0;">Email ou RA Invalidos! </p>
        </div>
    }
 