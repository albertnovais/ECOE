@model IEnumerable<ECOE.Models.Curso>

@{
    ViewBag.Title = "ListCurso";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Mensagem = ViewBag.Mensagem;
}

@* Modal Excluir *@

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm("EditCurso", "Curso", FormMethod.Post))
        {
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Remover</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    Realmente deseja remover

                    <input type="hidden" id="did" name="CursoId" value="" />
                    <input type="hidden" name="remover" value="true" />
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Remover" class="btn btn-danger">
                </div>
            </div>
        }
    </div>
</div>

@* Modal Excluir Fim *@



<div class="col-md-offset-2 col-md-12" style="margin-top:2%; text-align:right;">
    <a href="CreateCurso">
        <button type="button" class="btn btn-primary"> <i class="material-icons">add</i>Novo Curso</button>
    </a>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">content_paste</i>
                        </div>
                        <h4 class="card-title" style="font-weight:bold;">Cursos Cadastrados</h4>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Nome</th>
                                        <th>Status</th>
                                        <th>Coordenador(a)</th>
                                        @if (HttpContext.Current.User.IsInRole("Adm"))
                                        {
                                            <th class="disabled-sorting text-center">Ações</th>
                                        }
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Status</th>
                                        <th>Coordenador(a)</th>
                                        @if (HttpContext.Current.User.IsInRole("Adm"))
                                        {
                                            <th>Ações</th>
                                        }
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Status.Nome)</td>
                                            <td>
                                                @foreach (var i in item.PessoaCurso)
                                                {
                                                    if (i.Pessoa.AcessoId != 1)
                                                    {
                                                        <span> @i.Pessoa.Nome, </span>
                                                    }
                                                }
                                            </td>
                                            @if (HttpContext.Current.User.IsInRole("Adm"))
                                            {
                                            <td class="text-right">

                                                <a title="Adicionar Coordenador" href="@Url.Action("CoordenadorCurso", "Curso", new { CursoId = item.CursoId })" class="btn btn-link btn-primary btn-just-icon like"><i class="material-icons">add</i></a>
                                                <a title="Editar" href="@Url.Action("EditCurso", "Curso", new { CursoId = item.CursoId })" class="btn btn-link btn-warning btn-just-icon edit"><i class="material-icons">edit</i></a>
                                                <button title="Remover" data-toggle="modal" data-target="#exampleModal" class="btn btn-link btn-danger btn-just-icon remove" id="remo" onclick="myFunction('@item.CursoId')"><i class="material-icons">close</i></button>
                                            </td>
                                            }
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    function myFunction(id) {
        $("#did").val(id);

    }

</script>



