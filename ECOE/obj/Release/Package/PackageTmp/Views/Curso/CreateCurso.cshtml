@model ECOE.Models.Curso

@{
    /**/

    ViewBag.Title = "CreateCurso";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Mensagem = ViewBag.Mensagem;
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>


<div class="form-horizontal" style="margin-top:3%;">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" style="font-weight:bold;">
                    Adicionar Curso
                </h4>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group has-rose bmd-form-group">
                                <label class="bmd-label-floating">Curso </label>
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group has-rose">
                                <label class="bmd-label-floating">Coordenador do Curso</label>
                                <input name="NomeU" id="nome" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer" style="text-align:right">
                    <row>
                        <a href="ListCurso" class="btn btn-danger" style="font-weight:bold; font-family:Arial;">
                            Cancelar
                        </a>
                        <input type="submit" value="Salvar" class="btn btn-primary pull-right">
                    </row>
                </div>
            }
        </div>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#nome').autocomplete({
            source: '/Pessoa/Search',
            select: function (event, ui) {
                //set tagids to save
                $("#nome").val(ui.item.id);

                //Tags for display
                this.value = ui.item.value;
                return false;
            }
        });
    });
</script>