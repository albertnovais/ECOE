@model ECOE.Models.Pessoa

@{
    /**/

    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
    var Mensagem = ViewBag.Mensagem;
}


<div class="form-signin">
    <div class="text-center mb-4">
        <img class="mb-4" src="~/IMG/logo-white-fadba.png" alt="" width="200">
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-label-group">
            <input type="email" name="Email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
            <label for="inputEmail">Email</label>
        </div>

        <div class="form-label-group">
            <input type="password" name="Senha" id="inputPassword" class="form-control" placeholder="Senha/RA" required>
            <label for="inputPassword">Senha/RA</label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
    }
    @if (Mensagem == 2)
    {
        <div class="alert alert-danger m-3">
            <button type="button" class=" close btn-outline" data-dismiss="alert" aria-label="Close">
                <i class="fas fa-times"></i>
            </button>
            Usuario ou senha Inválidos!
        </div>
    }
    <p class="mt-5 mb-3 text-muted text-center">&copy; ECOE-FADBA</p>
</div>

