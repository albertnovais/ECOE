@model ECOE.Models.Pessoa

@{
    ViewBag.Title = "CreatePessoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Mensagem = ViewBag.Mensagem;
}
@if (Mensagem != null)
{
    <div class="alert alert-danger col-md-8 " style="margin-top:1%; margin:auto; margin-bottom:1%;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <i class="material-icons">close</i>
        </button>

        @if (Mensagem == "2")
        {
            <span style="font-size: 20px; text-align:center;">Cadastro não efetuado E-mail ja registrado!</span>
        }
        @if (Mensagem == "3")
        {
            <span style="font-size: 20px; text-align:center;">Avaliador ñão cadastrado!</span>
        }

    </div>
}

<div class="col-md-12" style="margin-top:3%;">
    <div class="card">
        <div class="card-header card-header-primary card-header-icon">
            <div class="card-icon">
                <i class="material-icons">person</i>
            </div>
            <h4 class="card-title" style="font-weight:bold;">Adicionar Usuário</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row ">
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group has-info">
                            <label class="bmd-label-floating">Nome</label>
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group has-rose">
                            <label class="bmd-label-floating">Email </label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group bmd-form-group has-rose">
                            <label class="bmd-label-floating">Senha</label>
                            @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group bmd-form-group has-rose">
                            <label class="bmd-label-floating">Ra</label>
                            @Html.EditorFor(model => model.RA, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RA, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <select class="form-control" name="AcessoId" data-style="btn btn-link" id="exampleFormControlSelect1">
                            @if (HttpContext.Current.User.IsInRole("Adm"))
                            {
                                <option value="1">Administrador</option>
                                <option value="4">Coordenador</option>
                            }
                            <option value="3">Avaliador</option>
                        </select>
                    </div>
                </div>

                <div class="card-footer ml-auto mr-auto">
                    <div>
                        <div class="col-md-offset-2 col-md-2">
                            <a href="ListaPessoa">
                                <input type="button" value="Cancelar" class="btn btn-danger" style="font-weight:bold; font-family:Arial;" />
                            </a>
                        </div>
                    </div>
                    <div>
                        <input type="submit" value="Salvar" class="btn btn-primary pull-right">
                        <div class="clearfix"></div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}