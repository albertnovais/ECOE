@model ECOE.Models.Pessoa

@{
    ViewBag.Title = "CreatePessoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Mensagem = ViewBag.Mensagem;
}

@if (Mensagem != null)
{
    @Html.Action("Modal_Mensagem", "Home", new { Mensagem })
}


<div class="col-md-12" style="margin-top:3%;">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title" style="font-weight:bold;">Adicionar Usuário</h4>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-body">
                <div class="row ">
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group has-info">
                            <label class="bmd-label-floating">Nome</label>
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group has-rose">
                            <label class="bmd-label-floating">Email </label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group bmd-form-group has-rose">
                            <label class="bmd-label-floating">Senha</label>
                            @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group bmd-form-group has-rose">
                            <label class="bmd-label-floating">Ra</label>
                            @Html.EditorFor(model => model.RA, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RA, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <select class="form-control" name="AcessoId" data-style="btn btn-link" id="exampleFormControlSelect1">
                            @if (HttpContext.Current.User.IsInRole("Adm"))
                            {
                                <option value="1">Administrador</option>
                                <option value="4">Coordenador</option>
                            }
                            <option value="3">Avaliador</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card-footer" style="text-align:right">
                <row>
                    <a href="ListaPessoa" class="btn btn-danger">
                        Cancelar
                    </a>
                    <input type="submit" value="Salvar" class="btn btn-primary pull-right">
                </row>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}