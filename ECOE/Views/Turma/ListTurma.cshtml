@model IEnumerable<ECOE.Models.Turma>

@{
    ViewBag.Title = "ListTurma";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Mensagem = ViewBag.Mensagem;
}

@* Modal Excluir *@
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm("EditTurma", "Turma", FormMethod.Post))
        {
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Remover</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Realmente deseja remover
            </div>
            <input type="hidden" id="did" name="TurmaId" value="" />
            <input type="hidden" name="remover" value="true" />
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <input type="submit" value="Remover" class="btn btn-danger">
            </div>
        </div>
        }
    </div>
</div>
@* Modal Excluir Fim *@

<div class="col-md-offset-2 col-md-12" style="margin-top:2%; text-align:right;">
        <a href="CreateTurma" class=" btn btn-primary"> <i class="material-icons">add</i>Nova Turma</a>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">group</i>
                        </div>
                        <h4 class="card-title" style="font-weight:bold;">Turmas</h4>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Turma</th>
                                        <th>Curso</th>
                                        <th>Cadastrou</th>
                                        <th>Status</th>
                                        <th class="disabled-sorting text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Turma</th>
                                        <th>Curso</th>
                                        <th>Cadastrou</th>
                                        <th>Status</th>
                                        <th class="text-right">Ações</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Curso.Nome)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Pessoa.Nome)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Status.Nome)</td>
                                            <td class="text-right">
                                                <a title="Adicionar Avaliador" href="@Url.Action("AvaliadorTurma","Turma", new { TurmaId = item.TurmaId})" class="btn btn-link btn-primary btn-just-icon like"><i class="material-icons">add</i></a>
                                                <a title="Resultado" href="@Url.Action("AlunoTurma","Turma", new { TurmaId = item.TurmaId})" class="btn btn-link btn-primary btn-just-icon like"><i class="material-icons">content_paste</i></a>
                                                <a href="@Url.Action("EditTurma", new { turmaId = item.TurmaId })" title="Editar" class="btn btn-link btn-warning btn-just-icon edit"><i class="material-icons">create</i></a>
                                                <button title="Remover" data-toggle="modal" data-target="#exampleModal" class="btn btn-link btn-danger btn-just-icon remove" id="remo" onclick="myFunction('@item.TurmaId')"><i class="material-icons">close</i></button>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function myFunction(id) {
        $("#did").val(id);
    }
</script> 