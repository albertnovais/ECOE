@model IEnumerable<ECOE.Models.Questao>
@{
    /**/

    ViewBag.Title = "avaliar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var q = ViewBag.q;
    int cont = 0;
    var cont2 = 0;
    int valorRadio;
    var nomeRadio = "";
    var qid = "";
    var Mensagem = ViewBag.Mensagem;


}

@if (Mensagem != null)
{
    <div class="alert alert-success col-md-8 " style="margin-top:1%; margin:auto">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <i class="material-icons">close</i>
        </button>

        @if (Mensagem == "1")
        {
            <span style="font-size: 20px; text-align:center;">Cadastro efetuado com sucesso! Avalie o aluno.</span>
        }
       


    </div>
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    @Html.AntiForgeryToken()

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col" style="width: 64%;">Questão</th>
                <th scope="col" style="width: 12%;">Não Realizou</th>
                <th scope="col" style="width: 12%;">Realizou Parcialmente</th>
                <th scope="col" style="width: 12%;">Realizou Bem</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>


    <div class="container">
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in q)
                {

                    <div class="container">
                        <div class="row">
                            <div class="col">@item</div>
                        </div>
                    </div>

                }
            </div>
            <div class="col-md-4">
                @foreach (var i in Model)
                {

                    qid = "QuestaoId" + (cont + 1);
                    cont++;

                    <input type="hidden" name="@qid" value="@i.QuestaoId" />
                    <input type="hidden" name="QuestaoId" value="@i.QuestaoId" />

                }
                @{
                    cont *= 0;
                }
                @for (int j = 0; j < Model.Count() * 3; j++)
                {
                    valorRadio = cont % 3;
                    if (cont % 3 == 0 && cont != 0)
                    {
                        <br />
                        cont2++;
                    }
                    cont++;
                    nomeRadio = "Radio" + (cont2 + 1);
                    <div class="col-md-4" style="float:left">
                        <input name="@nomeRadio" value="@valorRadio" type="radio" />
                        <input name="radio" value="@valorRadio" type="hidden">
                    </div>
                }

            </div>
        </div>
    </div>
    <input type="hidden" name="Aluno" value="@ViewBag.aluno">
    <input type="hidden" name="AvaliacaoId" value="@ViewBag.ava">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Cadastrar" name="btn-salvar" class="btn btn-facebook" />
        </div>
    </div>

}
<script>
</script>