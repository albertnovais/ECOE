@model IEnumerable<ECOE.Models.AlunoQuestao>

@{
    ViewBag.Title = "ResultadoIndividual";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var nota = ViewBag.nota * 100;
    var nome = ViewBag.nome;
}


<div class="alert alert-success col-md-6 mt-2" style="margin:auto; margin-bottom:1%;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <i class="material-icons">close</i>
    </button>
    <span style="font-size: 20px; text-align:center; font-weight:bolder;">
        @nome atingiu: @nota% do objetivo
    </span>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                    </div>
                    <div class="toolbar">
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead class="thead-dark" style="text-align:center;">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Questão")
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nota)
                                    </th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.Raw(item.Questao.Descricao)
                                    </td>
                                    <td>
                                        @if (item.Nota == 0)
                                        {
                                            <p>
                                                Não Realizou
                                            </p>
                                        }
                                        else if (item.Nota == 1)
                                        {
                                            <p>
                                                Realizou Parcialmente
                                            </p>
                                        }
                                        else
                                        {
                                            <p>
                                                Realizou
                                            </p>
                                        }
                                    </td>


                                    <td>
                                        @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                                    </td>
                                </tr>
                            }



                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



