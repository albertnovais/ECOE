@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    @Html.AntiForgeryToken()
   
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary card-header-icon">
                            <div class="card-icon">
                                <i class="material-icons">person</i>
                            </div>
                            <h4 class="card-title" style="font-weight:bold;">@ViewBag.avaliado</h4>
                        </div>
                        <div class="toolbar">
                            <div class="col-md-offset-2 col-md-12" style="margin-top:2%; text-align:right;">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                    Exibir descrição do caso
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead class="thead-dark" style="text-align:center;">
                                    <tr>
                                        <th scope="col" style="width: 58%;">Questões</th>
                                        <th scope="col" style="width: 14%;">Não Realizou</th>
                                        <th scope="col" style="width: 14%;">Realizou Parcialmente</th>
                                        <th scope="col" style="width: 14%;">Realizou Bem</th>
                                    </tr>
                                </thead>

                                @foreach (var item in q)
                                {
                                    <tr>
                                        <td class="row">
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col">@Html.Raw(item)</div>
                                                </div>
                                            </div>

                                            @foreach (var i in Model)
                                            {

                                                qid = "QuestaoId" + (cont + 1);
                                                cont++;

                                                <input type="hidden" name="@qid" value="@i.QuestaoId" />
                                                <input type="hidden" name="QuestaoId" value="@i.QuestaoId" />

                                            }
                                            @{
                                                cont *= 0;
                                            }
                                        </td>

                                        @for (int j = 0; j < 3; j++)
                                        {
                                            valorRadio = cont % 3;
                                            cont++;
                                            nomeRadio = "Radio" + (c + 1);

                                            <td style="text-align:center;">
                                                <input id="@nomeRadio" name="@nomeRadio" value="@valorRadio" type="radio" onchange="valid()" />
                                            </td>
                                        }
                                    </tr>
                                    c++;
                                }


                            </table>
                            <input type="hidden" name="Aluno" value="@ViewBag.aluno">
                            <input type="hidden" name="AvaliacaoId" value="@ViewBag.ava">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-12">
                                    <input id="enviar" disabled="disabled" type="submit" value="Salvar" name="btn-salvar" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>    
}

